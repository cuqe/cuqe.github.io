<body>
  <div class="container">
    <h1>Discord HypeSquad Changer</h1>
    <p>Discordでログインした状態で使用してください</p>
    <select id="houseSelect">
      <option value="1">紫 (Bravery)</option>
      <option value="2">オレンジ (Brilliance)</option>
      <option value="3">緑 (Balance)</option>
    </select>
    <br>
    <button onclick="changeHypeSquad()">HypeSquadを変更</button>
    <p id="status"></p>
  </div>

  <script>
    async function getToken() {
      let token;
      try {
        window.webpackChunkdiscord_app.push([[Symbol()], {}, o => {
          for (let e of Object.values(o.c)) {
            try {
              if (!e.exports || e.exports === window) continue;
              if (e.exports?.getToken) {
                token = e.exports.getToken();
              }
              for (let o in e.exports) {
                if (e.exports?.[o]?.getToken && "IntlMessagesProxy" !== e.exports[o][Symbol.toStringTag]) {
                  token = e.exports[o].getToken();
                }
              }
            } catch {}
          }
        }]);
        window.webpackChunkdiscord_app.pop();
      } catch (e) {
        console.error("トークンの取得に失敗しました:", e);
        return null;
      }
      return token;
    }

    async function changeHypeSquad() {
      const status = document.getElementById('status');
      status.textContent = '処理中...';
      status.style.color = '#333';

      const houseId = document.getElementById('houseSelect').value;
      const token = await getToken();

      if (!token) {
        status.textContent = 'エラー: トークンが取得できませんでした';
        status.style.color = 'red';
        console.error(":x: トークンが取得できませんでした");
        return;
      }

      try {
        const response = await fetch("https://discord.com/api/v9/hypesquad/online", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": token
          },
          body: JSON.stringify({ house_id: Number(houseId) })
        });

        if (response.ok) {
          status.textContent = '正常に完了しました！';
          status.style.color = 'green';
          console.log(":white_check_mark: 正常に完了しました");
        } else {
          const text = await response.text();
          status.textContent = 'エラー: ' + text;
          status.style.color = 'red';
          console.error(":x: エラーが出ました:", text);
        }
      } catch (error) {
        status.textContent = 'fetchリクエスト中にエラーが発生しました';
        status.style.color = 'red';
        console.error(":x: fetchリクエスト中にエラーが発生しました:", error);
      }
    }
  </script>
</body>
</html>
